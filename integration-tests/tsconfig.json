    "references": [
        {
            "path": "../framework"
        },
        {
            "path": "../hkdf-blake3"
        },
        {
            "path": "../secp256k1-blake3"
        },
        {
            "path": "../chacha20-ploy1305"
        }
    ],
    "include": ["./**/*.ts"]
