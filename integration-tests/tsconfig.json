        "lib": ["ES2021", "DOM", "DOM.Iterable"],
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": false,
        "strict": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "paths": {
            "@web3-social/hpke-framework": ["../framework/src"],
            "@web3-social/hpke-hkdf-blake3": ["../hkdf-blake3/src"],
